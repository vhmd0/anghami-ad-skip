{
  "name": "Anghami ads remover",
  "version": "1.4",
  "description": "This extension will remove the popup ads that interrupt music and remove Google ads inside the app. It will also press play after removing the ads. Compatible with Chrome and Brave.",
  "manifest_version": 3,

  "permissions": ["activeTab", "scripting", "storage", "alarms"],
  "host_permissions": ["https://play.anghami.com/*"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://play.anghami.com/*"],
      "js": ["./scripts/contentScripts/adRemover.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_title": "Anghami Ad Blocker"
  }
}
